<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>NEWS-SIMP</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css">
</head>
<body>
    <nav class="navbar navbar-dark bg-dark">
        <a href="#" class="navbar-brand mx-auto">NEWS</a>
    </nav>

    <div class="container">
        <div class="row">
            <div class="col-md-6 mt-4 text-center">
                <table class="table table-striped">
                    <tr>
                        <th>ID</th>
                        <th>TITLE</th>
                        <th>NEWS</th>
                    </tr>
                    <% if (news && news.length > 0) { %>
                        <% for (var i = 0; i < news.length; i++) { %>
                            <tr>
                                <td><%= news[i].id_news %></td>
                                <td><%= news[i].title %></td>
                                <td><%= news[i].news %></td>
                            </tr>
                        <% } %>
                    <% } else { %>
                        <tr>
                            <td colspan="3">No news available</td>
                        </tr>
                    <% } %>
                </table>
            </div>
            <div class="col-md-6 mt-4 card">
                <form action="/news" method="post" class="card-body">
                    <h3 class="card-title">Add News</h3>
                    <div class="form-group">
                        <input type="text" name="title" class="form-control" placeholder="Title">
                    </div>
                    <div class="form-group">
                        <input type="text" name="news" class="form-control" placeholder="News">
                    </div>
                    <input type="submit" class="btn btn-primary">
                </form>
            </div>
        </div>
    </div>
</body>
</html>